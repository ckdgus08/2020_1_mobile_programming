<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="10">

    <GridLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:paddingStart="30dp"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_weight="2"
        >

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="player"
            android:textSize="40sp" />

        <ImageView
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ash_ketchum" />

        <TextView
            android:layout_row="1"
            android:layout_column="1"
            android:text="16100415"
            android:textSize="30sp" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:text="최창현"
            android:textSize="30sp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/battle"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F5CC1E"
        android:orientation="horizontal"
        android:layout_weight="3"
        android:weightSum="5"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            >
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:id="@+id/based1"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_above="@+id/based1"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_below="@+id/based1"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/based1"
                android:layout_centerVertical="true"

                />
            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/based1"
                android:layout_centerVertical="true"


                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_weight="2"
            >
            <Button
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:id="@+id/based2"
                android:layout_marginBottom="5dp"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/based2"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>